{
    "files": [],
    "references": [
      {
        "path": "./tsconfig.app.json"
      },
      {
        "path": "./tsconfig.node.json"
      }
    ],
    "compilerOptions": {
      "module": "ESNext",                   // <-- suporte a import/export nativos
      "moduleResolution": "Node",
      "target": "ESNext",                   // ou “ES2022”+
      "jsx": "react-jsx",                   // JSX automático
      "esModuleInterop": true,              // habilita default imports de CJS
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    }
  }
  

